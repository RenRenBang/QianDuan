body
  font-family "Helvetica Neue", "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", Helvetica, Arial, sans-serif
  font-size 13px
  font-weight 200
  color #1F2D3D
a
  color #1f2d3d
  text-decoration none
.img-responsive
  width 100%
  height auto
  max-width 100%
  display block
.shadow
  background #F9F9F9
  display inline-block
.shadow
  box-shadow 0 1.5px 4px rgba(0, 0, 0, 0.24), 0 1.5px 6px rgba(0, 0, 0, 0.12)
.animate-shadow
  box-shadow 0 1.5px 4px rgba(0, 0, 0, 0.24), 0 1.5px 6px rgba(0, 0, 0, 0.12)
  -webkit-transition box-shadow .5s ease
  -o-transition box-shadow .5s ease
  transition box-shadow .5s ease
.animate-shadow:hover
  box-shadow 0 10px 20px rgba(0, 0, 0, 0.22), 0 14px 56px rgba(0, 0, 0, 0.25)
@media (-webkit-min-device-pixel-radio: 1.5),(min-device-pixel-radio: 1.5)
  .border-1px
    &:after
      -webkit-transform scaleY(0.7)
      transform: scaleY(0.7)
      
@media (-webkit-min-device-pixel-radio: 2),(min-device-pixel-radio: 2)
  .border-1px
    &:after
      -webkit-transform scaleY(0.5)
      transform: scaleY(0.5)
.clearfix
  display: inline-block
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden

.fade-enter,
.fade-leave-active 
  opacity: 0
.fade-enter-active,
.fade-leave-active
  transition: opacity .5s